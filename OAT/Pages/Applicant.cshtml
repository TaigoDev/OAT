@page
@model ApplicantModel
@{
    ViewData["Title"] = "Абитуриентам";
}

<link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
<link rel="stylesheet" href="~/css/mainPages.css" asp-append-version="true">

<!-- underheader -->

<section class="main-underheader">
    
    <video autoplay muted loop class="main-underheader-background">
        <source src="/videos/applicant.mp4" type="video/mp4">
    </video>

    <div class="container">
        <div class="welcome">
            <h1 class="main-page-title">
                Абитуриентам
            </h1>
            <h2 class="main-page-subtitle">
                Сделай шаг навстречу своему будущему!
            </h2>
            <ul class="contacts-list">
                <li>
                    <a href="https://vk.com/omaviat_2020">
                        <img class="icon" src="~/images/basic/vk.svg">
                    </a>
                </li>
                <li>
                    <a href="https://www.youtube.com/channel/UC-Ss6mzhYiKeGZaCBNyXo2w">
                        <img class="icon" src="~/images/basic/youtube.svg">
                    </a>
                </li>
                <li>
                    <a href="https://t.me/omaviatomsk2021">
                        <img class="icon" src="~/images/basic/telegram.svg">
                    </a>
                </li>
            </ul>
        </div>
        <ul class="important-links">
            <li class="important-link">
                <a href="">
                    <img src="~/images/applicant/careerEvents.png">
                    <span class="important-link-text">Профориентационные мероприятия</span>
                </a>
            </li>
            <li class="important-link">
                <a href="">
                    <img src="~/images/applicant/trainingCourses.png">
                    <span class="important-link-text">Подготовительные курсы</span>
                </a>
            </li>
            <li class="important-link">
                <a href="">
                    <img src="~/images/applicant/selectionCommittee.png">
                    <span class="important-link-text">Приемная комиссия</span>
                </a>
            </li>
            <li class="important-link">
                <a href="">
                    <img src="~/images/applicant/3dTour.png">
                    <span class="important-link-text">3D тур</span>
                </a>
            </li>
        </ul>
    </div>
</section>


<!-- important cards -->

