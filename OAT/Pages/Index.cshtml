@page
@model IndexModel
@{
    ViewData["Title"] = "Омский авиационный колледж";
}

<link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
<link rel="stylesheet" href="~/css/mainPages.css" asp-append-version="true">
<script src="~/js/newsSlider.js" asp-append-version="true"></script>

<!-- underheader -->

<section class="main-underheader">
    
    <video autoplay muted loop class="main-underheader-background">
        <source src="/videos/fly.mp4" type="video/mp4">
    </video>

    <div class="container">
        <div class="welcome">
            <h1 class="main-page-title">
                Взлётная полоса твоего успеха
            </h1>
            <h2 class="main-page-subtitle">
                Сделай шаг навстречу своему будущему!
            </h2>
            <ul class="contacts-list">
                <li>
                    <a href="https://vk.com/omaviat_2020">
                        <img class="icon" src="~/images/basic/vk.svg">
                    </a>
                </li>
                <li>
                    <a href="https://www.youtube.com/channel/UC-Ss6mzhYiKeGZaCBNyXo2w">
                        <img class="icon" src="~/images/basic/youtube.svg">
                    </a>
                </li>
                <li>
                    <a href="https://t.me/omaviatomsk2021">
                        <img class="icon" src="~/images/basic/telegram.svg">
                    </a>
                </li>
            </ul>
        </div>
        <ul class="important-links">
            <li class="important-link">
                <a href='@Url.Page("/organizationInformation/CommonIntelligence")'>
                    <img src="~/images/mainPage/info.png">
                    <span class="important-link-text">Сведения об образовательной организации</span>
                </a>
            </li>
            <li class="important-link">
                <a href="~/novye-masterskie/">
                    <img src="~/images/mainPage/workshop.png">
                    <span class="important-link-text">Новые мастерские</span>
                </a>
            </li>
            <li class="important-link">
                <a href="https://www.copp55.ru/">
                    <img src="~/images/mainPage/copp.png">
                    <span class="important-link-text">Центр опережающей профессиональной подготовки</span>
                </a>
            </li>
            <li class="important-link">
                <a href="~/proectRos/professionalitet/">
                    <img src="~/images/mainPage/professionalism.png">
                    <span class="important-link-text">Профессионалитет</span>
                </a>
            </li>
        </ul>
    </div>
</section>

<!-- news -->

<section>
    <div class="container">
        <h3 class="section-title">
            Новости
        </h3>
        <div class="news-slider-container">
            <ul id="news-slider" class="news-slider">
                @foreach (var news in Model.News)
                {
                    <li class="news-item">
                        <img src="@news.data.photos[0]" alt="">
                        <a href="~/news?id=@news.id" class="news-content">
                            <div class="news-date">
                                @news.data.date
                            </div>
                            <div class="news-header">
                                @news.data.title
                            </div>
                        </a>
                    </li>
                }
            </ul>
            <div class="news-slider-footer">
                <a class="all-news" href='@Url.Page("AllNews")'>
                    Все новости
                </a>
                <div class="news-slider-btns">
                    <div id="slider-prev" class="news-slider-arrow news-slider-prev">
                        <img src="~/images/basic/arrowBlack.svg" alt="">
                    </div>
                    <div id="slider-next" class="news-slider-arrow news-slider-next">
                        <img src="~/images/basic/arrowBlack.svg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- important cards -->

<section>
    <div class="container">
        <h3 class="section-title">
            Обучение с нами
        </h3>
        <ul class="cards-list">
            <li class="card-item">
                <a href="~/abitur/spetsialnosti/">
                    <div class="card-item-header">
                        Специальности и профессии
                    </div>
                    <div class="card-item-description">
                        Узнай больше про наши программы обучения
                    </div>
                </a>
            </li>
            <li class="card-item">
                <a href="~/proectRos/">
                    <div class="card-item-header">
                        Проекты и события
                    </div>
                    <div class="card-item-description">
                        Важная информация
                    </div>
                </a>
            </li>
            <li class="card-item">
                <a href="~/abitur/povyshenie-kvalifikatsii/">
                    <div class="card-item-header">
                        Повышение квалификации
                    </div>
                    <div class="card-item-description">
                        Узнай больше про наши программы обучения
                    </div>
                </a>
            </li>
            <li class="card-item">
                <a href="~/contacts/vopros-otvet/">
                    <div class="card-item-header">
                        Вопрос-ответ
                    </div>
                    <div class="card-item-description">
                        Узнай больше про наши программы обучения
                    </div>
                </a>
            </li>
        </ul>
    </div>
</section>

