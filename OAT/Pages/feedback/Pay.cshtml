@page
@model PayModel
@{
    ViewData["Title"] = "Электронные платежи";
}

<link rel="stylesheet" href="~/css/feedback/pay.css" asp-append-version="true">
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="~/js/pdf.js"></script>
<script type="text/javascript">
    var element = document.getElementById('#page');
    html2pdf(element);
</script>
<div class="container content-page" id="page">
    <section class="content">
        <h2 class="section-title">
            Электронные платежи
        </h2>

        <form class="pay-form">
            <div class="input-box">
                <label for="appointment">
                    Назначение платежа
                </label>
                <select id="appointment">
                    <option value="Платное обучение">
                        Платное обучение
                    </option>
                    <option value="Дистанционное обучение">
                        Дистанционное обучение
                    </option>
                    <option value="Дополнительные образовательные услуги">
                        Дополнительные образовательные услуги
                    </option>
                    <option value="Оказание платных услуг">
                        Оказание платных услуг
                    </option>
                    <option value="Добровольное пожертвование">
                        Добровольное пожертвование
                    </option>
                    <option value="Подготовительные курсы">
                        Подготовительные курсы
                    </option>
                    <option value="Профессиональная переподготовка">
                        Профессиональная переподготовка
                    </option>
                </select>
            </div>
            <div class="input-box">
                <label for="number">
                    Номер договора
                </label>
                <input id="documentId" type="text">
            </div>
            <div class="input-box">
                <label for="date">
                    Дата договора
                </label>
                <input id="documentDate" type="date">
            </div>
            <div class="input-box">
                <label for="student-fio">
                    ФИО студента
                </label>
                <input id="studentFullName" type="text">
            </div>
            <div class="input-box">
                <label for="group">
                    Группа обучения
                </label>
                <input id="group" type="text">
            </div>
            <div class="input-box">
                <label for="payer-fio">
                    ФИО плательщика
                </label>
                <input id="FullName" type="text">
            </div>
            <div class="input-box">
                <label for="email">
                    E-mail
                </label>
                <input id="email" type="email">
            </div>
            <div class="input-box">
                <label for="phone">
                    Телефон
                </label>
                <input id="phone" type="tel">
            </div>
            <div class="input-box">
                <label for="cost">
                    Сумма, ₽
                </label>
                <input id="cost" type="number">
            </div>

            <div>
                <input type="checkbox" id="agreement" value="agreement" />
                <label for="agreement">
                    Устанавливая флажок внутри данного чек-бокса вы даете согласие на обработку своих персональных данных.
                </label>
            </div>
            <button onclick="Upload();return false" class="customized">Сформировать квитанцию</button>
            <a href="javascript:window.print()">Click to Print This Page</a>


        </form>



    </section>
    <aside id="sidebar" class="sidebar">
        <h3 class="sidebar-title">
            Обратная связь
        </h3>
        <nav class="sidebar-body">
            <ul class="sidebar-links">
                <li class="sidebar-link">
                    <a href='@Url.Page("Location")'>
                        Как добраться
                    </a>
                </li>
                <li class="sidebar-link">
                    <a href='@Url.Page("Contacts")'>
                        Контактная информация
                    </a>
                </li>
                <li class="sidebar-link">
                    <a href=''>
                        Схема расположения колледжа
                    </a>
                </li>
                <li class="sidebar-link">
                    <a href='@Url.Page("QuestionAnswer")'>
                        Вопрос-ответ
                    </a>
                </li>
                <li class="sidebar-link sidebar-link-selected">
                    <a href='@Url.Page("Pay")'>
                        Электронные платежи
                    </a>
                </li>
            </ul>
        </nav>
    </aside>
</div>
<script type="text/javascript" src="/js/pay.js" charset="utf-8"></script>
