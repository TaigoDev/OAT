@page
@model LocationModel
@{
    ViewData["Title"] = "Вопрос-ответ";
}

<link rel="stylesheet" href="~/css/feedback/questionAnswer.css" asp-append-version="true">

<div class="container content-page">
    <section class="content">
        <h2 class="section-title">
            Вопрос-ответ
        </h2>

        <form class="questions">
            <div class="basic-data">
                <div class="input-box">
                    <label for="name">Имя</label>
                    <input id="name" type="text" placeholder="Введите имя">
                </div>
                <div class="input-box">
                    <label for="email">E-mail</label>
                    <input id="email" type="text" placeholder="Введите почту">
                </div>
                <div class="input-box">
                    <label for="phone">Телефон</label>
                    <input id="phone" type="text" placeholder="Введите телефон">
                </div>
                <div class="input-box">
                    <label for="theme">Тема вопроса</label>
                    <select id="theme">
                        <option>
                            Директору
                        </option>
                        <option>
                            Зам.Директора
                        </option>
                        <option>
                            Другое
                        </option>
                    </select>
                </div>
            </div>
            <div class="input-box">
                <label for="question-text">Вопрос</label>
                <textarea class="customized" placeholder="Введите вопрос"></textarea>
            </div>
            <div class="captcha-container">
                <div class="input-box">
                    <label for="Captcha">Captcha</label>
                    <input type="text">
                </div>
                <img src="" alt="Captcha" class="captcha">
            </div>
            <p class="question-warning">
                Нажимая на кнопку "Отправить", вы даете согласие на обработку персональных данных
            </p>
            <button type="submit" class="customized">Отправить</button>
        </form>
        
    </section>
    <aside id="sidebar" class="sidebar">
        <h3 class="sidebar-title">
            Обратная связь
        </h3>
        <nav class="sidebar-body">
            <ul class="sidebar-links">
                <li class="sidebar-link sidebar-link-selected">
                    <a href=''>
                        Как добраться
                    </a>
                </li>
                <li class="sidebar-link">
                    <a href=''>
                        Контактная информация
                    </a>
                </li>
                <li class="sidebar-link">
                    <a href=''>
                        Схема расположения колледжа
                    </a>
                </li>
                <li class="sidebar-link">
                    <a href=''>
                        Вопрос-ответ
                    </a>
                </li>
            </ul>
        </nav>
    </aside>
</div>