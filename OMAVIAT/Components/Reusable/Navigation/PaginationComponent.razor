<div>
	<ul class="pagination">
		@for (var i = 1; i <= Count; i++)
		{
			<PaginationItemComponent PageNumber="1" OnClick="async () => await OnClick.InvokeAsync(i)"
			                         Class='@(CurrentPage == i ? "active" : string.Empty)'/>
		}
	</ul>
</div>

@code {
	[Parameter] public int Count { get; set; }
	[Parameter] public int CurrentPage { get; set; } = 1;
	[Parameter] public EventCallback<int> OnClick { get; set; }

}